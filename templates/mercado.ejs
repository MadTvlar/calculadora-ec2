<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/default.css">


  <title>Tropa Azul - Mercado</title>

  <style>
    /* Estilo para o formul√°rio de upload */
    .upload-form-container {
      margin-top: 180px;
      margin-bottom: 40px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .upload-form-label {
      font-weight: bold;
      color: #274472;
      font-size: 1.25rem;
      margin-bottom: 12px;
      letter-spacing: 1px;
    }

    .upload-form-input {
      margin: 18px 0 24px 0;
      padding: 16px 18px;
      border-radius: 10px;
      border: 2px solid #274472;
      background: #e6f0fa;
      color: #232946;
      font-size: 1.1rem;
      width: 320px;
      box-sizing: border-box;
      transition: border 0.2s, box-shadow 0.2s;
      box-shadow: 0 2px 8px #27447222;
    }

    .upload-form-input:focus {
      border-color: #38bdf8;
      outline: none;
      box-shadow: 0 0 12px #38bdf8aa;
    }

    .upload-form-button {
      background: #274472;
      color: #fff;
      font-weight: 700;
      padding: 14px 36px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      font-size: 1.15rem;
      font-family: 'Orbitron', Arial, sans-serif;
      transition: background 0.2s, box-shadow 0.2s, color 0.2s;
      box-shadow: 0 2px 12px #38bdf855;
      letter-spacing: 1px;
    }

    .upload-form-button:hover {
      background: #38bdf8;
      color: #232946;
      box-shadow: 0 0 18px #38bdf8cc;
    }

    .upload-success-message {
      background: #38bdf8;
      color: #232946;
      font-weight: bold;
      font-size: 1.15rem;
      padding: 16px 32px;
      border-radius: 10px;
      margin: 0 auto 24px auto;
      width: fit-content;
      box-shadow: 0 2px 12px #38bdf855;
      letter-spacing: 1px;
      animation: surgindo 1s;
    }

    .upload-error-message {
      background: #ff3333;
      color: #fff;
      font-weight: bold;
      font-size: 1.15rem;
      padding: 16px 32px;
      border-radius: 10px;
      margin: 0 auto 24px auto;
      width: fit-content;
      box-shadow: 0 2px 12px #ff333355;
      letter-spacing: 1px;
      animation: surgindo 1s;
    }
  </style>


</head>

<body>
  <div class="top-container">
    <div class="logo-container">
      <a href="/segmentos">
        <img src="/images/tropa_azul.png" alt="TVLAR MOTOS" class="logo">
      </a>
    </div>

    <div class="user-container">
      <div class="user-menu">
        <%= usuario %>
          <button class="menu-toggle" onclick="toggleMenu()">
            <div class="bar"></div>
            <div class="bar"></div>
            <div class="bar"></div>
          </button>
      </div>
    </div>
    <div class="dropdown-menu" id="dropdownMenu">
      <a href="/motos" onclick="editarPerfil()">üìù Voltar</a>
      <a href="#" onclick="alterarSenha()">üîí Alterar Senha</a>
      <a href="#" onclick="configuracoes()">‚öôÔ∏è Configura√ß√µes</a>
      <a href="#" onclick="ajuda()">‚ùì Ajuda</a>
      <a href="/logout" class="logout-option">üö™ Sair</a>
    </div>
  </div>

  <div class="upload-form-container">
    <form id="upload-excel-form" action="/upload" method="POST" enctype="multipart/form-data">
      <label for="excelFile" class="upload-form-label">Enviar arquivo Excel:</label><br>
      <input type="file" id="excelFile" name="excelFile" accept=".xlsx,.xls" class="upload-form-input">
      <button type="submit" class="upload-form-button">Enviar</button>
      <div id="upload-message" style="display:none;"></div>
    </form>
  </div>


  <footer class="footer">
    <div class="footer-text">
      <p>Copyright &copy; 2025 by Departamento de T.I | All Rights Reserved.</p>
      <span class="animate scroll" style="--i:1;"></span>
    </div>
    <div class="footer-iconTop">
      <a href="#"><i class='bx bx-up-arrow-alt'></i></a>
      <span class="animate scroll" style="--i:3;"></span>
    </div>
  </footer>

  <script>
    document.addEventListener('DOMContentLoaded', function () {


      // Feedback ao enviar formul√°rio
      var uploadForm = document.getElementById('upload-excel-form');
      var feedbackDiv = document.getElementById('upload-feedback');
      uploadForm.addEventListener('submit', function () {
        feedbackDiv.style.display = 'block';
        feedbackDiv.innerHTML = '<div style="background:#274472;color:#fff;font-weight:bold;padding:14px 32px;border-radius:10px;box-shadow:0 2px 12px #38bdf855;font-size:1.1rem;letter-spacing:1px;">Enviando arquivo...</div>';
      });

      /// Exibir mensagem de sucesso/erro s√≥ ap√≥s envio
      var urlParams = new URLSearchParams(window.location.search);
      var success = urlParams.get('success');
      var inseridos = urlParams.get('inseridos');
      var uploadMsg = document.getElementById('upload-message');
      if (success !== null && inseridos !== null) {
        if (success == '1' && parseInt(inseridos) > 0) {
          uploadMsg.style.display = 'block';
          uploadMsg.className = 'upload-success-message';
          uploadMsg.innerHTML = `Arquivo enviado e ${inseridos} registro${inseridos > 1 ? 's' : ''} inserido${inseridos > 1 ? 's' : ''} com sucesso!`;
        } else {
          uploadMsg.style.display = 'block';
          uploadMsg.className = 'upload-error-message';
          uploadMsg.innerHTML = 'Nenhum dado v√°lido foi inserido. Verifique o arquivo enviado.';
        }
        // Scroll at√© a mensagem
        uploadMsg.scrollIntoView({ behavior: 'smooth', block: 'center' });

        // Remove os par√¢metros da URL sem recarregar a p√°gina, mas s√≥ depois de exibir a mensagem
        setTimeout(function () {
          if (window.history.replaceState) {
            const url = window.location.protocol + "//" + window.location.host + window.location.pathname;
            window.history.replaceState({ path: url }, '', url);
          }
        }, 100); // Pequeno delay para garantir exibi√ß√£o
      }
    });
  </script>

  <script>
    function toggleMenu() {
      const menu = document.getElementById('dropdownMenu');
      const toggle = document.querySelector('.menu-toggle');

      menu.classList.toggle('active');
      toggle.classList.toggle('active');
    }

    // Fechar menu quando clicar fora dele
    document.addEventListener('click', function (event) {
      const menu = document.getElementById('dropdownMenu');
      const toggle = document.querySelector('.menu-toggle');

      if (!toggle.contains(event.target) && !menu.contains(event.target)) {
        menu.classList.remove('active');
        toggle.classList.remove('active');
      }
    });
  </script>

</body>

</html>