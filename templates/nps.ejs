<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>MOTORS SIMULATOR</title>

  <link rel="stylesheet" href="/css/nps.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>

<body>
  <div class="top-container">
    <div class="logo-container">
      <a href="/segmentos">
        <img src="/images/tropa_azul.png" alt="TVLAR MOTOS" class="logo" />
      </a>
    </div>

    <div class="filial-container">
      <div class="user-menu">
        <button id="user-button">
          <%= usuario %>
        </button>
        <div id="user-dropdown" class="dropdown-content">
          <a href="/motos">Voltar</a>
          <a href="/logout">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <div class="upload-container" style="text-align:center; margin: 40px auto; margin-top: 5%;">
    <h2>Importar Planilha de NPS</h2>
    <form id="upload-form" action="/nps/upload" method="POST" enctype="multipart/form-data"
      style="text-align: center; margin: 40px 0;">
      <input id="excelFile" type="file" name="excelFile" accept=".xlsx, .xls" required />
      <br /><br />
      <button type="submit">Enviar</button>
    </form>
    <p id="mensagem" style="font-weight: bold; margin-top: 15px;"></p>
  </div>

  <footer class="footer">
    <div class="footer-text">
      <p>&copy; 2025 by Departamento de T.I | Todos os direitos reservados.</p>
    </div>
    <div class="footer-iconTop">
      <a href="#"><i class='bx bx-up-arrow-alt'></i></a>
    </div>
  </footer>

  <script>
    // Menu dropdown
    document.getElementById("user-button").addEventListener("click", function () {
      document.getElementById("user-dropdown").classList.toggle("show");
    });

    window.onclick = function (event) {
      if (!event.target.matches("#user-button")) {
        var dropdowns = document.getElementsByClassName("dropdown-content");
        for (var i = 0; i < dropdowns.length; i++) {
          if (dropdowns[i].classList.contains("show")) {
            dropdowns[i].classList.remove("show");
          }
        }
      }
    };

    // Upload via JavaScript com feedback na página
    const uploadForm = document.getElementById('upload-form');
    const mensagem = document.getElementById('mensagem');
    const submitBtn = uploadForm.querySelector('button[type="submit"]');

    uploadForm.addEventListener('submit', async (e) => {
      e.preventDefault();

      mensagem.textContent = '';
      mensagem.style.color = 'black';

      submitBtn.disabled = true;
      submitBtn.textContent = 'Enviando...';

      const formData = new FormData(uploadForm);

      try {
        const response = await fetch('/nps/upload', {
          method: 'POST',
          body: formData
        });

        if (!response.ok) throw new Error('Erro na requisição: ' + response.statusText);

        const resultText = await response.text();
        mensagem.style.color = 'green';
        mensagem.textContent = resultText;

      } catch (error) {
        mensagem.style.color = 'red';
        mensagem.textContent = 'Erro ao enviar o arquivo: ' + error.message;
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Enviar';
      }
    });
  </script>
</body>

</html>