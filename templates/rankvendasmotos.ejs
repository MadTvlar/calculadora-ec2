<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Ranking de Vendas - Tropa Azul</title>
  <link rel="stylesheet" href="/css/rankvendasmotos.css" />
  <link rel="stylesheet" href="/css/default.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>


</head>

<body>
  <div class="top-container">
    <div class="logo-container">
      <a href="/segmentos">
        <img src="/images/tropa_azul.png" alt="TVLAR MOTOS" class="logo">
      </a>
    </div>

    <div class="user-container">
      <div class="user-menu" id="user">
        <%= usuario %>
          <button class="menu-toggle" onclick="toggleMenu()">
            <div class="bar"></div>
            <div class="bar"></div>
            <div class="bar"></div>
          </button>
      </div>
    </div>
    <div class="dropdown-menu" id="dropdownMenu">
      <a href="/motos">‚Ü©Ô∏è Voltar</a>
      <a href="/logout">üö™ Logout</a>
    </div>
  </div>

   PODIO, DESCOMENTAR PARA APARECER 


  <div class="podio-title">
    <h2>
      RANKING - JUNHO DE 2025
    </h2>
  </div>

  <div class="podio-container">
    <img src="/images/2_colocado.png" alt="2¬∫ Colocado" class="podio-img" />
    <img src="/images/1_colocado.png" alt="1¬∫ Colocado" class="podio-img" />
    <img src="/images/3_colocado.png" alt="3¬∫ Colocado" class="podio-img" />
  </div>

  <div class="podio-podium">
    <div class="podium-block second">2</div>
    <div class="podium-block first">1</div>
    <div class="podium-block third">3</div>
  </div> 


  <div class="card">
    <div class="rank-title">
      <!-- Titulo do ranking, ajustar e tirar do coment√°rio automatico -->
      <h2>
        RANKING GERAL - AGOSTO DE 2025 <!-- <%= mesAtual.charAt(0).toUpperCase() + mesAtual.slice(1) %>
          <%= anoAtual %> -->
      </h2>
      <p class="data-atualizacao">
        Atualizado em:
        <%= (()=> {
          const d = new Date(ultimaAtualizacao);
          const dia = String(d.getDate()).padStart(2, '0');
          const mes = String(d.getMonth() + 1).padStart(2, '0');
          const ano = d.getFullYear();
          const hora = String(d.getHours()).padStart(2, '0');
          const min = String(d.getMinutes()).padStart(2, '0');
          return `${dia}/${mes}/${ano} √†s ${hora}h${min}`;
          })() %>
      </p>
    </div>

    <div class="table-container">
      <table class="rank-table">
        <thead>
          <tr>
            <th>Posi√ß√£o</th>
            <th>Filial</th>
            <th>Vendedor</th>
            <!-- <th>B√¥nus (29 a 31 jul)</th> -->  <!--esse √© o titulo-->
            <th>Pontos</th>
            <th>Vendas</th>
            <th>LLO (%)</th>
            <th>Capta√ß√£o</th>
            <th>Contratos</th>
            <th>Retorno</th>
            <th>NPS</th>
          </tr>
        </thead>
        <tbody>
          <% rankingGeral.forEach((v, i)=> { %>
            <tr>
              <td class="rank-item">
                <% if (v.val_pontos> 0) { %>
                  <% if (i===0) { %>
                    <i class="fas fa-crown gold"></i>
                    <% } else if (i===1) { %>
                      <i class="fas fa-crown silver"></i>
                      <% } else if (i===2) { %>
                        <i class="fas fa-crown bronze"></i>
                        <% } else { %>
                          <%= i + 1 %>¬∫
                            <% } %>
                              <% } else { %>
                                -
                                <% } %>
              </td>
              <td>
                <%= v.filial %>
              </td>
              <td>
                <%= v.vendedor %>
              </td>
              <!-- calculo do bonus abaixo -->
              <!-- <td>
                 <%= v.pontos_extras ? '+' + v.pontos_extras : '-' %> 
              </td> -->
              <td>
                <%= v.val_pontos ? Math.floor(v.val_pontos) : '-' %>
              </td>
              <td>
                <%= v.val_vendas ? Math.floor(v.val_vendas) : '-' %>
              </td>
              <td>
                <%= v.val_lucro || '-' %>%
              </td>
              <td>
                <%= v.val_captacao ? Math.floor(v.val_captacao) : '-' %>
              </td>
              <td>
                <%= v.val_contratos ? Math.floor(v.val_contratos) : '-' %>
              </td>
              <td>
                <%= v.val_retorno ? Math.floor(v.val_retorno) : '-' %>
              </td>
              <td>
                <%= v.nota_oficial ? Math.floor(v.nota_oficial) : '-' %>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    // Adiciona o √≠ndice para cada linha da tabela
    document.querySelectorAll('.rank-table tbody tr').forEach((row, index) => {
      row.style.setProperty('--row-index', index);
    });

    // Anima√ß√£o das bordas do p√≥dio
    window.addEventListener('DOMContentLoaded', function () {
      setTimeout(function () {
        document.querySelector('.podio-item.third')?.classList.add('ativo');
      }, 700);
      setTimeout(function () {
        document.querySelector('.podio-item.second')?.classList.add('ativo');
      }, 1300);
      setTimeout(function () {
        document.querySelector('.podio-item.first')?.classList.add('ativo');
      }, 1900);
    });
  </script>

  <footer class="footer">
    <p>Copyright &copy; 2025 Departamento de T.I | Todos os direitos reservados.</p>
  </footer>

  <script src="/js/default.js"></script>



  <!-- CONFETE PODIO, DESCOMENTA MALDITO -->


  
  <script>
    function confeteCantos() {
      // Lado esquerdo (aponta para o centro)
      confetti({
        angle: 60, // Diagonal para o centro
        spread: 130, // Aumenta o alcance lateral
        startVelocity: 100, // Mais for√ßa para subir
        particleCount: 180, // Mais part√≠culas
        origin: { x: 0, y: 1 }
      });
      // Lado direito (aponta para o centro)
      confetti({
        angle: 120, // Diagonal para o centro
        spread: 130,
        startVelocity: 100,
        particleCount: 180,
        origin: { x: 1, y: 1 }
      });
    }

    setTimeout(confeteCantos, 2900);
    setTimeout(confeteCantos, 3500);
    setTimeout(confeteCantos, 4400);
  </script>


</body>

</html>