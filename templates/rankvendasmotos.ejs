<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/rankvendasmotos.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <title>MOTORS SIMULATOR</title>
</head>

<body>
  <div class="top-container">
    <div class="logo-container">
      <a href="/segmentos">
        <img src="/images/tvlar_motos.png" alt="TVLAR MOTOS" class="logo">
      </a>
    </div>

    <div class="filial-container">
      <div class="user-menu">
        <button id="user-button">
          <%= usuario %>
        </button>
        <div id="user-dropdown" class="dropdown-content">
          <a href="/motos">Voltar</a>
          <a href="/logout">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Título com mês dinâmico -->
  <div class="rank-title">
    <h2>Rank Mensal de Vendas - <%= mesAtual.charAt(0).toUpperCase() + mesAtual.slice(1) %>
    </h2>
  </div>

  <div class="card-container">
    <div class="card card-1">
      <h2>RANKING MANAUS</h2>
      <!-- RANKING MANAUS -->
      <ul class="rank-list">
        <% rankingManaus.forEach((v, i)=> { %>
          <li class="rank-item">
            <span class="pos">
              <% if(i===0) { %>
                <!-- Coroa de ouro para o 1º lugar -->
                <i class="fas fa-medal gold"></i>
                <% } else if(i===1) { %>
                  <!-- Medalha de prata para o 2º lugar -->
                  <i class="fas fa-medal silver"></i>
                  <% } else if(i===2) { %>
                    <!-- Medalha de bronze para o 3º lugar -->
                    <i class="fas fa-medal bronze"></i>
                    <% } else { %>
                      <!-- Exibe a posição normal para os demais -->
                      <%= i + 1 %>º
                        <% } %>
            </span>
            <span class="name">
              <%= v.vendedor %>
            </span>
            <span class="sales">
              <%= v.total_vendas %> vendas
            </span>
          </li>
          <% }) %>
      </ul>

    </div>

    <div class="card card-2">
      <h2>RANKING GERAL</h2>
      <ul class="rank-list">
        <% rankingGeral.forEach((v, i)=> { %>
          <li class="rank-item">
            <span class="pos">
              <% if(i===0) { %>
                <!-- Coroa de ouro para o 1º lugar -->
                <i class="fas fa-crown gold"></i>
                <% } else if(i===1) { %>
                  <!-- Medalha de prata para o 2º lugar -->
                  <i class="fas fa-crown  silver"></i>
                  <% } else if(i===2) { %>
                    <!-- Medalha de bronze para o 3º lugar -->
                    <i class="fas fa-crown l bronze"></i>
                    <% } else { %>
                      <!-- Exibe a posição normal para os demais -->
                      <%= i + 1 %>º
                        <% } %>
            </span>
            <span class="name">
              <%= v.vendedor %>
            </span>
            <span class="sales">
              <%= v.total_vendas %> vendas
            </span>
          </li>
          <% }) %>
      </ul>
    </div>

    <div class="card card-3">
      <h2>RANKING INTERIOR</h2>
      <ul class="rank-list">
        <% rankingInterior.forEach((v, i)=> { %>
          <li class="rank-item">
            <span class="pos">
              <% if(i===0) { %>
                <!-- Coroa de ouro para o 1º lugar -->
                <i class="fas fa-medal gold"></i>
                <% } else if(i===1) { %>
                  <!-- Medalha de prata para o 2º lugar -->
                  <i class="fas fa-medal silver"></i>
                  <% } else if(i===2) { %>
                    <!-- Medalha de bronze para o 3º lugar -->
                    <i class="fas fa-medal bronze"></i>
                    <% } else { %>
                      <!-- Exibe a posição normal para os demais -->
                      <%= i + 1 %>º
                        <% } %>
            </span>
            <span class="name">
              <%= v.vendedor %>
            </span>
            <span class="sales">
              <%= v.total_vendas %> vendas
            </span>
          </li>
          <% }) %>
      </ul>
    </div>
  </div>

  <footer class="footer">
    <div class="footer-text">
      <p>Copyright &copy; 2025 by Departamento de T.I | All Rights Reserved.</p>
      <span class="animate scroll" style="--i:1;"></span>
    </div>
    <div class="footer-iconTop">
      <a href="#"><i class='bx bx-up-arrow-alt'></i></a>
      <span class="animate scroll" style="--i:3;"></span>
    </div>
  </footer>

  <script>
    document.getElementById("user-button").addEventListener("click", function () {
      document.getElementById("user-dropdown").classList.toggle("show");
    });

    window.onclick = function (event) {
      if (!event.target.matches('#user-button')) {
        var dropdowns = document.getElementsByClassName("dropdown-content");
        for (var i = 0; i < dropdowns.length; i++) {
          if (dropdowns[i].classList.contains('show')) {
            dropdowns[i].classList.remove('show');
          }
        }
      }
    };

  </script>

</body>

</html>