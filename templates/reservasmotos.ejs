<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/reservasmotos.css">

  <title>MOTORS SIMULATOR</title>
</head>

<body>
  <div class="top-container">
    <div class="logo-container">
      <a href="/segmentos">
        <img src="/images/tvlar_motos.png" alt="TVLAR MOTOS" class="logo">
      </a>
    </div>

    <div class="filial-container">
      <div class="user-menu">
        <button id="user-button">
          <%= usuario %>
        </button>
        <div id="user-dropdown" class="dropdown-content">
          <a href="/motos">Voltar</a>
          <a href="/logout">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <div class="tabela-scroll">
    <h2>Reservas Ativas (<%= motos.length %>)</h2>
    <table>
      <thead>
        <tr>
          <th class="col-id">ID</th>
          <th class="col-patio">Pátio</th>
          <th class="col-modelo">Modelo</th>
          <th class="col-chassi">Chassi</th>
          <th class="col-situacao">Situação</th>
          <th class="col-data">Data</th>
          <th class="col-destino">Destino</th>
          <th class="col-dias">Dias</th>
          <th class="col-observacao">Observação</th>
        </tr>
      </thead>
      <tbody>
        <% motos.forEach((moto, index)=> { %>
          <tr>
            <td class="col-id">
              <%= index + 1 %>
            </td>
            <td class="col-patio">
              <%= moto.patio || '---------' %>
            </td>
            <td class="col-modelo">
              <%= moto.modelo %>
            </td>
            <td class="col-chassi">
              <%= moto.chassi %>
            </td>
            <td class="col-situacao">
              <%= moto.situacao_reserva %>
            </td>
            <td class="col-data">
              <%= moto.data_reserva ? new Date(moto.data_reserva).toLocaleDateString('pt-BR') : '-' %>
            </td>
            <td class="col-destino">
              <%= moto.destino_reserva || '-' %>
            </td>
            <td class="col-dias">
              <%= moto.dias_reserva || '-' %>
            </td>
            <td class="col-observacao">
              <%= moto.observacao_reserva || '-' %>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>



  <footer class="footer">
    <div class="footer-text">
      <p>Copyright &copy; 2025 by Departamento de T.I | All Rights Reserved.</p>
      <span class="animate scroll" style="--i:1;"></span>
    </div>
    <div class="footer-iconTop">
      <a href="#"><i class='bx bx-up-arrow-alt'></i></a>
      <span class="animate scroll" style="--i:3;"></span>
    </div>
  </footer>

</body>

</html>